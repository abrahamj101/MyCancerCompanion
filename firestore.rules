rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - anyone authenticated can read, users can only write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      // Allow write if:
      // 1. The path userId matches the authenticated user's UID, OR
      // 2. The document's uid field matches the authenticated user's UID, OR
      // 3. The path userId matches the document's uid field (for updates using stored UID)
      allow write: if request.auth != null && (
        request.auth.uid == userId ||
        (resource != null && resource.data.uid == request.auth.uid) ||
        (request.resource != null && request.resource.data.uid == userId)
      );
    }
    
    // Friend requests - users can read their own requests and create new ones
    match /friendRequests/{requestId} {
      // Allow read for authenticated users (they can query their own)
      allow read: if request.auth != null;
      
      // Allow create if user is the sender
      allow create: if request.auth != null && 
        request.resource.data.senderId == request.auth.uid;
      
      // Allow update if user is the receiver (for accepting/rejecting)
      allow update: if request.auth != null && 
        resource.data.receiverId == request.auth.uid;
      
      // Allow delete if user is the sender (for canceling)
      allow delete: if request.auth != null && 
        resource.data.senderId == request.auth.uid;
    }
    
    // Chats - users can read/write chats they're part of
    match /chats/{chatId} {
      // Allow read for any authenticated user (to check if chat exists)
      // The app code will only show data for chats the user is part of
      allow read: if request.auth != null;
      
      // Allow create for any authenticated user
      // (We use stored UIDs in participants, not Firebase auth UIDs)
      allow create: if request.auth != null;
      
      // Allow update/delete for any authenticated user
      // (The app logic ensures users only update their own chats)
      allow update, delete: if request.auth != null;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read/write for any authenticated user
        allow read, create: if request.auth != null;
      }
    }
  }
}