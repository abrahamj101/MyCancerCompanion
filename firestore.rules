rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - anyone authenticated can read, users can only write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Friend requests - users can read their own requests and create new ones
    match /friendRequests/{requestId} {
      // Allow read for authenticated users (they can query their own)
      allow read: if request.auth != null;
      
      // Allow create if user is the sender
      allow create: if request.auth != null && 
        request.resource.data.senderId == request.auth.uid;
      
      // Allow update if user is the receiver (for accepting/rejecting)
      allow update: if request.auth != null && 
        resource.data.receiverId == request.auth.uid;
      
      // Allow delete if user is the sender (for canceling)
      allow delete: if request.auth != null && 
        resource.data.senderId == request.auth.uid;
    }
    
    // Chats - users can read/write chats they're part of
    match /chats/{chatId} {
      // Allow read for any authenticated user (to check if chat exists)
      // The app code will only show data for chats the user is part of
      allow read: if request.auth != null;
      
      // Allow create if user is one of the participants
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participants;
      
      // Allow update/delete if user is participant (document must exist)
      allow update, delete: if request.auth != null && 
        resource != null &&
        request.auth.uid in resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
        // DEBUG MODE: Allow read/write for any authenticated user
        allow read, create: if request.auth != null;
      }
    }
  }
}